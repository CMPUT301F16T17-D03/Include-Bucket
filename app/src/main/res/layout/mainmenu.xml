<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity"
    android:background="#000000">

    <Button
        android:text="@string/new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newRequest"
        android:layout_alignTop="@+id/MyRequests"
        android:layout_toStartOf="@+id/RiderText" />

    <Button
        android:text="My Requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyRequests"
        android:layout_below="@+id/RiderText"
        android:layout_toEndOf="@+id/RiderText" />

    <Button
        android:text="Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Current"
        android:layout_below="@+id/DriverText"
        android:layout_alignEnd="@+id/MyRequests"
        android:layout_toEndOf="@+id/RiderText" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Logout" />

    <Button
        android:text="Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Account" />

    <Button
        android:text="Browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Browse"
        android:layout_below="@+id/DriverText"
        android:layout_toStartOf="@+id/DriverText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rider"
        android:id="@+id/RiderText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver"
        android:id="@+id/DriverText"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/RiderText"
        android:textSize="30dp" />
</RelativeLayout>