<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <Button
        android:text="Rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:id="@+id/Rider" />

    <Button
        android:text="@string/new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newRequest"
        android:layout_below="@+id/Rider"
        android:layout_alignStart="@+id/Browse" />

    <Button
        android:text="My Requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyRequests"
        android:layout_below="@+id/Rider"
        android:layout_alignStart="@+id/Current" />

    <Button
        android:text="Driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Driver"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Rider" />

    <Button
        android:text="Current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Current"
        android:layout_below="@+id/Driver"
        android:layout_toEndOf="@+id/Driver" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Logout" />

    <Button
        android:text="Browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Browse"
        android:layout_below="@+id/Driver"
        android:layout_toStartOf="@+id/Driver" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Account"
        android:id="@+id/ViewAccount"
        android:layout_alignTop="@+id/Logout"
        android:layout_alignParentEnd="true" />
</RelativeLayout>